@section Styles{
    <link href="~/css/reservations.css" rel="stylesheet" />

}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.5/dist/sweetalert2.all.min.js"></script>
<main id="main">
    <!-- ======= Contact Section ======= -->
    <section class="contact" id="contactUslist">
        <div class="container" data-aos="fade-up">
            <div class="section-title" data-aos="fade-up">
                <h2>店家資訊</h2>
            </div>
            <div data-aos="fade-up" id="storeLocal">
                <div class="row mt-5" id="enjoyEatLocation">
                    <div id="map" style="border: 0; width: 50%; height: 300px" frameborder="0" allowfullscreen>
                </div>
                <div class="col-lg-4" id="enjoyEatInformation">
                    <div class="info">
                        <div class="address">
                            <i class="bi bi-geo-alt"></i>
                            <h4>地址:</h4>
                            <p>100台北市中正區青島東路、紹興南街口</p>
                        </div>

                        <div class="open-hours">
                            <i class="bi bi-clock"></i>
                            <h4>營業時間:</h4>
                            <p>
                                Monday-Saturday:<br />
                                11:00 AM - 21:00PM
                            </p>
                        </div>

                        <div class="email">
                            <i class="bi bi-envelope"></i>
                            <h4>Email:</h4>
                            <p>thm101team66@gmail.com</p>
                        </div>

                        <div class="phone">
                            <i class="bi bi-phone"></i>
                            <h4>電話:</h4>
                            <p>02 5589 55488 </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="content section-title" id="customerComment">
            <h2>顧客服務</h2>
            <br />
            <p id="contactQuestion">為追求高水準的服務品質，我們重視每位貴賓的寶貴意見，若您有任何問題或建議，歡迎填寫以下表單與我們聯絡，我們將盡速爲您回覆，謝謝！</p>
        </div>
        <div class="row">
            <div class="content" id="contactUsForm">
                <div class="col-lg-10 mt-5 ">
                    <form role="form"
                          class="php-email-form">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="text"
                                       name="name"
                                       class="form-control"
                                       id="name"
                                       v-model="name"
                                       placeholder="請輸入您的大名"
                                       required />
                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                <input type="email"
                                       class="form-control"
                                       name="email"
                                       id="email"
                                       v-model="email"
                                       placeholder="請輸入您的Email"
                                       required />
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="tel"
                                       name="phone"
                                       class="form-control"
                                       id="phone"
                                       v-model="phone"
                                       placeholder="請輸入您的電話"
                                       required />
                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                <select class="book-a-table form-control form-select" id="commentOption" v-model="serviceOption" name="time">
                                    <option value="" disabled selected>請選擇服務項目</option>
                                    <template>
                                        <option :value="mt.value" v-for="mt in servicelist">{{mt.txt}}</option>
                                    </template>
                                </select>
                            </div>
                            <div class="form-group mt-3">
                                <input type="text"
                                       class="form-control"
                                       name="subject"
                                       id="subject"
                                       v-model="subject"
                                       placeholder="請輸入主旨"
                                       required />
                            </div>
                            <div class="form-group mt-3">
                                <textarea class="form-control"
                                          name="message"
                                          rows="8"
                                          placeholder="內容"
                                          v-model="message"
                                          required></textarea>
                            </div>
                            <div class="my-3">
                                <div class="loading">Loading</div>
                                <div class="error-message"></div>
                                @*  <div class="sent-message">
                                Your message has been sent. Thank you!
                                </div>*@
                            </div>
                        </div>
                    </form>
                    <div class="text-center">
                        <button id="submitbtn" @@click="submit">送出</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<!-- End Contact Section -->
@section Scripts
    {
    <script>
        let app = new Vue({
            el: "#contactUslist",
            data: {
                name: "",
                email: "",
                phone: "",
                subject: "",
                serviceOption: "",
                message: "",
                map: {},
                servicelist: [
                    { value: '餐點品質', txt: '餐點品質' },
                    { value: '服務品質', txt: '服務品質' },
                    { value: '宴會及餐敘', txt: '宴會及餐敘' },
                    { value: '其他', txt: '其他' }],
            },
            mounted: function () {
                let _this = this;
                _this.initMap();
            },
            methods: {
                submit: function () {
                    let _this = this;
                    var request = {
                        CustomerName: this.name,
                        Email: this.email,
                        Phone: this.phone,
                        QuestionKeynote: this.subject,
                        ServiceOption: this.serviceOption,
                        QuestionContent: this.message,
                    }
                    if (this.name != '' && this.email != '' && this.phone != null && this.subject != '' && this.serviceOption != '' && this.message != '') {
                        axios.post("https://localhost:7071/api/ContactUs/PostCustomerService", request)
                            .then(response => {
                                //alert(response.data);
                                Swal.fire({
                                    allowOutsideClick: false,
                                    icon: 'success',
                                    color: '#333',
                                    iconColor: '#D8CDB9',
                                    background: '#FFF',
                                    title: '發送成功',
                                    //text: '',
                                    html: '<div class="custom-swal-container"><div class="custom-swal-message">我們收到您的建議，將會盡快回覆您!</div></div>',
                                    showConfirmButton: false,
                                    timer: 2500,
                                    position: 'center'
                                }).then(result => {
                                    if (result.dismiss === Swal.DismissReason.timer) {
                                        window.location.assign("https://localhost:7071");
                                    };
                                })
                            });
                    } else {
                        Swal.fire({
                            allowOutsideClick: false,
                            icon: 'error',
                            color: '#333',
                            iconColor: '#D8CDB9',
                            confirmButtonColor: '#721B29',
                            background: '#FFF',
                            html: '<div class="custom-swal-container"><div class="custom-swal-message">有地方還沒填哦!</div></div>',
                            // text: '有地方還沒填哦!',
                        })
                    }
                },
                initMap: function () {
                    let _this = this;
                    let location = {
                        lat: 25.043056733101256, // 經度
                        lng: 121.52486142576117 // 緯度
                    };
                    _this.map = new google.maps.Map(document.getElementById("map"), {
                        zoom: 16,
                        center: location,
                        mapTypeId: 'terrain',
                        mapTypeControl: false,
                        styles: [
                            {
                                featureType: "all",
                                elementType: "labels.text.fill",
                                stylers: [
                                    {
                                        color: "#ffffff"
                                    }
                                ]
                            },
                            {
                                featureType: "all",
                                elementType: "labels.text.stroke",
                                stylers: [
                                    {
                                        color: "#000000"
                                    },
                                    {
                                        lightness: 13
                                    }
                                ]
                            },
                            {
                                featureType: "administrative",
                                elementType: "geometry.fill",
                                stylers: [
                                    {
                                        color: "#000000"
                                    }
                                ]
                            },
                            {
                                featureType: "administrative",
                                elementType: "geometry.stroke",
                                stylers: [
                                    {
                                        color: "#144b53"
                                    },
                                    {
                                        lightness: 14
                                    },
                                    {
                                        weight: 1.4
                                    }
                                ]
                            },
                            {
                                featureType: "landscape",
                                elementType: "all",
                                stylers: [
                                    {
                                        color: "#08304b"
                                    }
                                ]
                            },
                            {
                                featureType: "poi",
                                elementType: "geometry",
                                stylers: [
                                    {
                                        color: "#0c4152"
                                    },
                                    {
                                        lightness: 5
                                    }
                                ]
                            },
                            {
                                featureType: "road.highway",
                                elementType: "geometry.fill",
                                stylers: [
                                    {
                                        color: "#000000"
                                    }
                                ]
                            },
                            {
                                featureType: "road.highway",
                                elementType: "geometry.stroke",
                                stylers: [
                                    {
                                        color: "#0b434f"
                                    },
                                    {
                                        lightness: 25
                                    }
                                ]
                            },
                            {
                                featureType: "road.arterial",
                                elementType: "geometry.fill",
                                stylers: [
                                    {
                                        color: "#000000"
                                    }
                                ]
                            },
                            {
                                featureType: "road.arterial",
                                elementType: "geometry.stroke",
                                stylers: [
                                    {
                                        color: "#0b3d51"
                                    },
                                    {
                                        lightness: 16
                                    }
                                ]
                            },
                            {
                                featureType: "road.local",
                                elementType: "geometry",
                                stylers: [
                                    {
                                        color: "#000000"
                                    }
                                ]
                            },
                            {
                                featureType: "transit",
                                elementType: "all",
                                stylers: [
                                    {
                                        color: "#146474"
                                    }
                                ]
                            },
                            {
                                featureType: "water",
                                elementType: "all",
                                stylers: [
                                    {
                                        color: "#021019"
                                    }
                                ]
                            }
                        ]
                    });
                    var marker = new google.maps.Marker({
                        position: location, // 使用正確的位置對象
                        animation: google.maps.Animation.BOUNCE //一直彈跳
                    });
                    marker.setMap(_this.map);
                }
            }
        })
    </script>
}
