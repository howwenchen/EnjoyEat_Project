@section Styles
{
	<link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    <style>
        body {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
                background-color: rgba(0, 0, 0, 0.9);
                font-family: Arial, Helvetica, sans-serif;
                flex-direction: column;
            }

            .header {
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 10px;
                background-color: #f1f1f1;
            }

            .cart{
                margin-right: 10px;
            }
            .carousel-item img {
                width: 200px;
                height: 200px;
                margin-bottom: 50px;
                object-fit: contain;
            }

            .food-item {
                display: flex;
                padding: 10px;
                border-bottom: 1px solid #ccc;
            }

            .food-image {
                width: 100px;
                height: 100px;
                margin-right: 10px;
            }

            .food-details {
                flex-grow: 1;
            }

            .food-name {
                font-size: 16px;
                font-weight: bold;
            }

            .food-description {
                margin-top: 5px;
                font-size: 14px;
                color: #666;
            }

            .add-to-cart {
                display: flex;
                align-items: center;
                margin-top: 10px;
            }

            .add-button {
                padding: 5px 10px;
                background-color: #4caf50;
                color: white;
                border: none;
                cursor: pointer;
            }

            .total-price {
                margin-left: 10px;
                font-weight: bold;
            }

            .order-details {
                margin-top: 20px;
            }

            .order-details h4 {
                margin-bottom: 10px;
            }

            .order-item {
                margin-bottom: 5px;
            }

    @@media (min-width: 1000px) {
                body {
                    height: auto;
                }

                .form-container {
                    width: 400px;
                }
            }

            /* 手機設備的樣式調整 */
    @@media (max-width: 414px) {

                /* iPhone 12 的裝置寬度為 414px */
                .carousel-item img {
                    max-width: 80%;
                    /* 調整圖片的寬度 */
                    max-height: auto;
                    /* 調整圖片的高度，保持原始寬高比例 */
                    object-fit: contain;
                }
            }
        </style>
}

